[Unit]
Description=Start Logger
After=multi-user.target

[Service]
Type=idle
User=pi
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/pi/.Xauthority
ExecStart=/usr/bin/python3 /home/pi/Github/Datalogger-Alistair-Pi/main.py
WorkingDirectory=/home/pi/Github/Datalogger-Alistair-Pi/
Restart=on-failure
RestartSec=10s
KillMode=process

[Install]
WantedBy=multi-user.target
